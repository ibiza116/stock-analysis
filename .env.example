# 株価分析ツール - 環境設定ファイル（サンプル）
# 使用する際は .env にコピーして適切な値を設定してください

# Flask設定
SECRET_KEY=stock-analysis-tool-secret-key-change-me
FLASK_DEBUG=False
FLASK_ENV=production
PORT=5000

# Basic認証設定（必要に応じて有効化）
# BASIC_AUTH_USERNAME=admin
# BASIC_AUTH_PASSWORD=your_secure_password_here

# データベース設定
DATABASE_PATH=data/database/analysis.db
BACKUP_RETENTION_DAYS=30

# ログ設定
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# キャッシュ設定
CACHE_TIMEOUT=3600
ENABLE_CACHE=True

# API制限設定
API_RATE_LIMIT=100